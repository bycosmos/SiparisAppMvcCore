@model SiparisApp.Web.Models.SliderEkleViewModel

@{
    ViewData["Title"] = "SliderEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container-fluid">
    <div class="row m-5">
        @if (Model.SliderList.Count<1)
        {
            <div class="col-md-4 card">
                <form method="post" enctype="multipart/form-data" asp-controller="Anasayfa" asp-action="SliderEkle">
                    <div class="form-group">
                        <div class="col-md-10">
                            <span><i>Lütfen jpg, jpeg ya da png formatı kullanın.</i></span>
                            <input type="file" name="file" multiple />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" value="Upload" required />
                        </div>
                    </div>
                </form>
            </div>

        }
        <div class="col-md-8">






            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayName("ID")
                        </th>
                        <th>
                            @Html.DisplayName("Resim")
                        </th>
                        <th>
                            @Html.DisplayName("İşlem Seç")
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.SliderList)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                <img src="../../img/Slider/@item.ResimAdres" alt="Alternate Text" style="width:100px;height:100px;" />
                            </td>
                            <td>


                                <a class="btn btn-primary" asp-controller="Anasayfa"
                                   asp-action="SliderSil"
                                   asp-route-id="@item.Id">sil</a>

                                <a class="btn btn-primary" asp-controller="Anasayfa"
                                   asp-action="SliderDüzenle"
                                   asp-route-id="@item.Id">Düzenle</a>




                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>

    </div>

</div>


