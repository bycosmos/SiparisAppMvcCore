@model SiparisApp.Web.Models.UrunListesiModel
@{
    ViewData["Title"] = "Details";
}
    <div class="container-fluid my-5 mb-5 mt-5">

        <div class="row">
            <div class="col-md-4">
                <img src="../../img/Urunler/@Model.urun.ResimUrl" alt="@Model.urun.Isim" class="img-fluid" style="width:350px;height:350px;" />
            </div>
            <div class="col-md-4">
                <h1 class="mb-3">
                    @Model.urun.Isim
                </h1>
                <hr />


                <h4 class="text-primary mb-3">
                    @Model.urun.Fiyat TL
                </h4>

                <form asp-controller="Basket" asp-action="AddToBasket" method="post" class="form-inline">
                    <input type="hidden" name="productId" value="@Model.urun.Id" />
                    <div class="input-group mb-3">
                        <input type="number" name="quantity" class="form-control" value="1" min="1" step="1" style="width:100px;" />
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-cart-plus"></i>Sepete Ekle
                            </button>
                        </div>
                    </div>
                </form>


            </div>
            <div class="col-md-4">
                <p class="p-3">
                    @Html.Raw(Model.urun.Aciklama)
                </p>
            </div>
        </div>

    </div>

    
