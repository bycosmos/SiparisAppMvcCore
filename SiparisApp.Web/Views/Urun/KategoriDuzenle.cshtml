@model SiparisApp.Web.Models.KategoriEkleDuzenleModel

@{
    ViewData["Title"] = "KategoriEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12 text-center">
    <h1>Kategori Ekleme Sayfası</h1>


</div>

<div class="container-fluid">


    <div class="col-md-12">
        <form method="post" enctype="multipart/form-data" asp-controller="Urun" asp-action="KategoriDuzenle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                Id
                <input asp-for="kategori.Id" class="form-control" readonly />
                <span asp-validation-for="kategori.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                Kategori Adı
                <input asp-for="kategori.Isim" class="form-control" required />
                <span asp-validation-for="kategori.Isim" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>


</div>